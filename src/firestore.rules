
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------------
    // Funciones Auxiliares Basadas en Custom Claims
    // --------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Lee el rol directamente del token de autenticación (Custom Claim)
    function getRole() {
      return request.auth.token.role;
    }

    function isTeacher() {
      return isSignedIn() && getRole() == 'TEACHER';
    }

    function isTeacherOrAdmin() {
      return isSignedIn() && (getRole() == 'SUPER_ADMIN' || getRole() == 'TEACHER');
    }
    
    function isAdmin() {
      return isSignedIn() && getRole() == 'SUPER_ADMIN';
    }

    // Esta función sigue necesitando leer Firestore porque `managedGroupIds` está en el documento.
    function isStudentInManagedGroup(studentId) {
        let teacherData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
        let studentData = get(/databases/$(database)/documents/users/$(studentId)).data;
        // Ensure teacherData and studentData and their properties are not null before access
        return teacherData != null && teacherData.managedGroupIds != null && 
               studentData != null && studentData.groupId != null &&
               studentData.groupId in teacherData.managedGroupIds;
    }

    // --------------------------------------------------------------------------
    // Reglas de Usuario
    // --------------------------------------------------------------------------
    
    match /users/{userId} {
      // Un usuario puede leer su propio perfil.
      // Un admin puede leer cualquier perfil.
      // Un profesor puede leer los perfiles de los estudiantes en sus grupos gestionados.
      allow get: if isOwner(userId) || isAdmin() || (isTeacher() && isStudentInManagedGroup(userId));
      
      // Listado de usuarios:
      // Admins y Profesores pueden listar usuarios. El filtrado específico se hace en el cliente.
      allow list: if isTeacherOrAdmin();
      
      // Creación de usuarios:
      // - Cualquiera puede crear su propio doc si está autenticado (registro).
      // - Un admin puede crear cualquier doc.
      // - Un usuario no autenticado (para el formulario de registro antes de que el perfil se cree)
      allow create: if isOwner(userId) || isAdmin() || request.auth == null;
      
      // Actualización de usuarios:
      // El dueño puede actualizar su propio perfil (pero no su rol, a menos que sea el mismo).
      // Un Admin puede actualizar cualquier perfil, incluyendo roles.
      allow update: if (isOwner(userId) && (
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']) ||
         resource.data.role == request.resource.data.role
      )) || isAdmin();
      
      // Eliminación de usuarios: Solo Admins.
      allow delete: if isAdmin();
      
      match /payments/{id} { 
          allow read, list: if isOwner(userId) || isAdmin();
          allow create: if isOwner(userId) && request.resource.data.userId == userId;
          allow update, delete: if isAdmin();
      }
      match /subscriptions/{id} { 
          allow read, list: if isOwner(userId) || isAdmin();
          allow create: if isOwner(userId) && request.resource.data.userId == userId;
          allow update, delete: if isAdmin();
      }
    }

    // --------------------------------------------------------------------------
    // Reglas de Sumisiones (Colección Raíz)
    // --------------------------------------------------------------------------

    match /submissions/{submissionId} {
      // Un estudiante puede crear su propia sumisión.
      allow create: if isSignedIn() && request.resource.data.studentId == request.auth.uid;
      
      // Un estudiante puede leer sus propias sumisiones.
      // Profesores y admins pueden leer todas las sumisiones.
      allow get: if (isSignedIn() && resource.data.studentId == request.auth.uid) || isTeacherOrAdmin();

      // Profesores y Admins pueden listar todas las sumisiones sin restricciones.
      // Los estudiantes solo pueden listar sus propias sumisiones con un where clause.
      allow list: if isTeacherOrAdmin() || (
        isSignedIn() && 
        request.query.limit != null &&
        request.query.where.size() == 1 &&
        request.query.where[0][0] == 'studentId' && 
        request.query.where[0][1] == '==' &&
        request.query.where[0][2] == request.auth.uid
      );
        
      // Nadie puede actualizar o eliminar sumisiones por ahora para mantener la integridad.
      allow update, delete: if false;
    }


    // --------------------------------------------------------------------------
    // Grupos e Assignments
    // --------------------------------------------------------------------------
    
    match /groups/{groupId} {
      // Lectura pública necesaria para el formulario de registro.
      allow get, list: if true;
      // Solo los Super Admins pueden crear, modificar o eliminar grupos.
      allow write: if isAdmin();
    }

    match /assignments/{assignmentId} {
        // Permite leer y listar si el usuario está autenticado
        // El filtrado específico por rol/grupo se hace en el cliente
        allow read, list: if isSignedIn();
        allow create, update, delete: if isTeacherOrAdmin();
    }

    match /challenges/{challengeId} {
      allow read, list: if isSignedIn();
      allow write: if isTeacherOrAdmin();
    }

    match /courses/{courseId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.instructorId == request.auth.uid;
      allow update, delete: if isSignedIn() && (resource.data.instructorId == request.auth.uid || isAdmin());

      match /assignments/{id} { allow read, write: if isSignedIn(); }
    }
  }
}
