rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------------
    // Funciones Auxiliares
    // --------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    // Verifica si el usuario es dueño del documento por UID
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Obtiene el rol del usuario de forma segura
    // Usamos esta función para centralizar la lógica de TEACHER/ADMIN
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isTeacherOrAdmin() {
      return isSignedIn() && (getUserData().role == 'SUPER_ADMIN' || getUserData().role == 'TEACHER');
    }
    
    function isAdmin() {
      return isSignedIn() && getUserData().role == 'SUPER_ADMIN';
    }

    // --------------------------------------------------------------------------
    // Reglas de Usuario (Perfiles y Datos Privados)
    // --------------------------------------------------------------------------
    
    match /users/{userId} {
      // CLAVE PARA TU PANEL: Permitir que el usuario lea su propio perfil SIEMPRE
      // Esto evita que la validación de rol bloquee la carga inicial del InnerAppLayout.
      allow get: if isOwner(userId) || isTeacherOrAdmin();
      
      // Permitir a profesores listar a los estudiantes para los selectores
      allow list: if isTeacherOrAdmin();
      
      // Registro y edición
      allow create: if isOwner(userId) || request.auth == null || isAdmin(); 
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      // Subcolecciones privadas
      match /submissions/{submissionId} {
        allow read, list: if isOwner(userId) || isTeacherOrAdmin();
        allow create: if isOwner(userId) && request.resource.data.studentId == userId;
        allow update, delete: if isOwner(userId) || isAdmin();
      }

      match /payments/{paymentId} {
        allow read, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isAdmin();
      }

      match /subscriptions/{subscriptionId} {
        allow read, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isAdmin();
      }
    }

    // --------------------------------------------------------------------------
    // Grupos y Asignaciones
    // --------------------------------------------------------------------------
    
    match /groups/{groupId} {
      // Lectura pública para que dropdowns de registro y asignación funcionen
      allow read, list: if true; 
      allow write: if isTeacherOrAdmin();
    }

    match /assignments/{assignmentId} {
        // Los estudiantes deben leer lo asignado, los profes deben listar para gestionar
        allow read, list: if isSignedIn();
        // Solo profes/admins crean asignaciones
        allow create: if isTeacherOrAdmin() && request.resource.data.assignedBy == request.auth.uid;
        allow update, delete: if isTeacherOrAdmin();
    }

    // --------------------------------------------------------------------------
    // Desafíos (Challenges)
    // --------------------------------------------------------------------------
    
    match /challenges/{challengeId} {
      allow read, list: if isSignedIn();
      allow write: if isTeacherOrAdmin();
    }

    // --------------------------------------------------------------------------
    // Cursos y Contenido Estructurado
    // --------------------------------------------------------------------------
    
    match /courses/{courseId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.instructorId == request.auth.uid;
      allow update: if isSignedIn() && (resource.data.instructorId == request.auth.uid || isAdmin());
      allow delete: if isSignedIn() && (resource.data.instructorId == request.auth.uid || isAdmin());

      match /assignments/{assignmentId} {
        allow read, list: if isSignedIn();
        allow create, update, delete: if isSignedIn() && 
          get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid;

        match /testcases/{testcaseId} {
          allow read, list: if isSignedIn();
          allow create, update, delete: if isSignedIn() && 
            get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid;
        }
      }
    }
  }
}
