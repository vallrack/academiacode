
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------------
    // Funciones Auxiliares (Basadas en Custom Claims)
    // --------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole() {
      return request.auth.token.role;
    }

    function isTeacher() {
      return isSignedIn() && getRole() == 'TEACHER';
    }

    function isSuperAdmin() {
      return isSignedIn() && getRole() == 'SUPER_ADMIN';
    }

    function isTeacherOrAdmin() {
      return isTeacher() || isSuperAdmin();
    }
    
    // Función para obtener datos de Firestore (usar con moderación)
    function getUserData(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data;
    }

    function isStudentInManagedGroup(studentId) {
        // Obtenemos los datos del profesor desde Firestore, ya que los managedGroupIds están ahí
        let teacherData = getUserData(request.auth.uid);
        let studentData = getUserData(studentId);
        
        return teacherData != null && teacherData.managedGroupIds != null && 
               studentData != null && studentData.groupId != null &&
               studentData.groupId in teacherData.managedGroupIds;
    }

    // --------------------------------------------------------------------------
    // Reglas de Usuario
    // --------------------------------------------------------------------------
    
    match /users/{userId} {
      // Lectura: 
      // - El dueño puede leer su propio perfil.
      // - Un admin puede leer cualquier perfil.
      // - Un profesor puede leer los perfiles de los estudiantes en sus grupos gestionados.
      allow get: if isOwner(userId) || isSuperAdmin() || (isTeacher() && isStudentInManagedGroup(userId));
      
      // Listado:
      // - Solo los profesores y administradores pueden listar usuarios.
      // - Las consultas del cliente deben filtrar los resultados específicos.
      allow list: if isTeacherOrAdmin();
      
      // Creación:
      // - Un usuario no autenticado (registro público).
      // - El propio usuario (importante para el flujo de `createUser`).
      // - Un administrador.
      allow create: if request.auth == null || isOwner(userId) || isSuperAdmin();
      
      // Actualización:
      // - El dueño puede actualizar su perfil, pero no puede cambiar su propio rol.
      // - Un administrador puede actualizar cualquier perfil, incluyendo el rol.
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isSuperAdmin();
      
      // Eliminación: Solo los administradores.
      allow delete: if isSuperAdmin();
      
      match /payments/{id} { 
          allow read, list: if isOwner(userId) || isSuperAdmin();
          allow create: if isOwner(userId) && request.resource.data.userId == userId;
          allow update, delete: if isSuperAdmin();
      }
      match /subscriptions/{id} { 
          allow read, list: if isOwner(userId) || isSuperAdmin();
          allow create: if isOwner(userId) && request.resource.data.userId == userId;
          allow update, delete: if isSuperAdmin();
      }
    }

    // --------------------------------------------------------------------------
    // Reglas de Sumisiones (Colección Raíz)
    // --------------------------------------------------------------------------

    match /submissions/{submissionId} {
      // Un estudiante puede crear su propia sumisión.
      allow create: if isSignedIn() && request.resource.data.studentId == request.auth.uid;
      
      // Un estudiante puede leer sus propias sumisiones.
      // Profesores y admins pueden leer todas las sumisiones.
      allow get: if (isSignedIn() && resource.data.studentId == request.auth.uid) || isTeacherOrAdmin();

      // Profesores y Admins pueden listar todas las sumisiones.
      // Los estudiantes solo pueden listar sus propias sumisiones con una cláusula `where`.
      allow list: if isTeacherOrAdmin() || (
        isSignedIn() && 
        request.query.limit != null &&
        request.query.where.size() == 1 &&
        request.query.where[0][0] == 'studentId' && 
        request.query.where[0][1] == '==' &&
        request.query.where[0][2] == request.auth.uid
      );
        
      // Nadie puede actualizar o eliminar sumisiones para mantener la integridad.
      allow update, delete: if false;
    }

    // --------------------------------------------------------------------------
    // Grupos e Assignments
    // --------------------------------------------------------------------------
    
    match /groups/{groupId} {
      // Lectura pública necesaria para el formulario de registro y para que los usuarios vean detalles.
      allow get, list: if true;
      // Solo los Super Admins pueden crear, modificar o eliminar grupos.
      allow write: if isSuperAdmin();
    }

    match /assignments/{assignmentId} {
        // Permite leer y listar a cualquier usuario autenticado.
        // El filtrado específico por rol/grupo se hace en el cliente.
        allow read, list: if isSignedIn();
        // Solo profesores y administradores pueden crear, modificar o eliminar asignaciones.
        allow create, update, delete: if isTeacherOrAdmin();
    }

    match /challenges/{challengeId} {
      allow read, list: if isSignedIn();
      allow write: if isTeacherOrAdmin();
    }

    match /courses/{courseId} {
      allow read, list: if isSignedIn();
      // Solo profesores y admins pueden crear cursos.
      allow create: if isTeacherOrAdmin() && request.resource.data.instructorId == request.auth.uid;
      allow update, delete: if (isTeacher() && resource.data.instructorId == request.auth.uid) || isSuperAdmin();

      match /assignments/{id} { allow read, write: if isTeacherOrAdmin(); }
    }
  }
}
