
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------------
    // Funciones Auxiliares
    // --------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    // Verifica si el usuario autenticado es el dueño del documento
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Obtiene el rol del usuario desde su documento de perfil
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isTeacherOrAdmin() {
      return isSignedIn() && (getUserRole() == 'SUPER_ADMIN' || getUserRole() == 'TEACHER');
    }
    
    function isAdmin() {
      return isSignedIn() && getUserRole() == 'SUPER_ADMIN';
    }

    // Verifica si el usuario es el instructor de un curso específico
    function isCourseInstructor(courseId) {
      return isSignedIn() && get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid;
    }

    // --------------------------------------------------------------------------
    // Reglas de Usuario (Perfiles y Datos Privados)
    // --------------------------------------------------------------------------
    
    match /users/{userId} {
      // IMPORTANTE: Permite a profesores listar estudiantes para asignaciones
      allow list: if isTeacherOrAdmin();
      allow get: if isOwner(userId) || isTeacherOrAdmin();
      
      // Permitir creación inicial (registro) o por admin
      allow create: if isOwner(userId) || request.auth == null || isAdmin(); 
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      // Subcolecciones privadas del usuario
      match /submissions/{submissionId} {
        allow read, list: if isOwner(userId) || isTeacherOrAdmin(); // Profesores necesitan leer para corregir
        allow create: if isOwner(userId) && request.resource.data.studentId == userId;
        allow update, delete: if isOwner(userId) || isAdmin();
      }

      match /payments/{paymentId} {
        allow read, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isAdmin();
      }

      match /subscriptions/{subscriptionId} {
        allow read, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isAdmin();
      }
    }

    // --------------------------------------------------------------------------
    // Grupos y Asignaciones
    // --------------------------------------------------------------------------
    
    match /groups/{groupId} {
      // Permitir lectura pública para que el dropdown de grupos funcione
      allow read, list: if true; 
      allow write: if isAdmin() || isTeacherOrAdmin();
    }

    match /assignments/{assignmentId} {
        // Los estudiantes deben poder leer las tareas asignadas
        allow read, list: if isSignedIn();
        // Solo profesores y admins pueden crear o modificar asignaciones
        allow create: if isTeacherOrAdmin() && request.resource.data.assignedBy == request.auth.uid;
        allow update, delete: if isTeacherOrAdmin() || isAdmin();
    }

    // --------------------------------------------------------------------------
    // Desafíos (Challenges)
    // --------------------------------------------------------------------------
    
    match /challenges/{challengeId} {
      allow read: if isSignedIn();
      allow write: if isTeacherOrAdmin();
    }

    // --------------------------------------------------------------------------
    // Cursos y Contenido Estructurado
    // --------------------------------------------------------------------------
    
    match /courses/{courseId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.instructorId == request.auth.uid;
      allow update: if isCourseInstructor(courseId) && request.resource.data.instructorId == resource.data.instructorId;
      allow delete: if isCourseInstructor(courseId) || isAdmin();

      match /assignments/{assignmentId} {
        allow read, list: if isSignedIn();
        allow create: if isCourseInstructor(courseId) && request.resource.data.courseId == courseId;
        allow update: if isCourseInstructor(courseId) && request.resource.data.courseId == resource.data.courseId;
        allow delete: if isCourseInstructor(courseId);

        match /testcases/{testcaseId} {
          allow read, list: if isSignedIn();
          allow create: if isCourseInstructor(courseId) && request.resource.data.assignmentId == assignmentId;
          allow update: if isCourseInstructor(courseId) && request.resource.data.assignmentId == resource.data.assignmentId;
          allow delete: if isCourseInstructor(courseId);
        }
      }
    }
  }
}
