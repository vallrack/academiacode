
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------------
    // Funciones Auxiliares
    // --------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data;
    }

    function isTeacherOrAdmin() {
      let role = getUserData(request.auth.uid).role;
      return isSignedIn() && (role == 'SUPER_ADMIN' || role == 'TEACHER');
    }
    
    function isAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'SUPER_ADMIN';
    }

    function isSameGroup(targetUserId) {
      let currentUser = getUserData(request.auth.uid);
      let targetUser = getUserData(targetUserId);
      return isSignedIn() && (
        currentUser.role == 'SUPER_ADMIN' || 
        currentUser.role == 'TEACHER' || 
        (currentUser.groupId == targetUser.groupId && currentUser.groupId != null)
      );
    }

    // --------------------------------------------------------------------------
    // Reglas de Usuario
    // --------------------------------------------------------------------------
    
    match /users/{userId} {
      // Lectura individual de un usuario
      allow get: if isOwner(userId) || isTeacherOrAdmin() || isSameGroup(userId);
      
      // Listado de usuarios
      // NOTA: Permitimos que cualquier usuario autenticado liste usuarios.
      // Esto es necesario porque los estudiantes necesitan ver a sus compañeros de grupo.
      // La query del cliente ya filtra por 'groupId' para mantener la seguridad.
      allow list: if isSignedIn();
      
      // Creación de usuarios
      allow create: if request.auth == null || isAdmin() || isOwner(userId);
      
      // Actualización de usuarios
      allow update: if (isOwner(userId) && (
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']) ||
        resource.data.role == request.resource.data.role
      )) || isAdmin();
      
      // Eliminación de usuarios
      allow delete: if isAdmin();
      
      match /payments/{id} { 
          allow read, list: if isOwner(userId) || isAdmin();
          allow create: if isOwner(userId) && request.resource.data.userId == userId;
          allow update, delete: if isAdmin();
      }
      match /subscriptions/{id} { 
          allow read, list: if isOwner(userId) || isAdmin();
          allow create: if isOwner(userId) && request.resource.data.userId == userId;
          allow update, delete: if isAdmin();
      }
    }

    // --------------------------------------------------------------------------
    // Reglas de Sumisiones (Colección Raíz)
    // --------------------------------------------------------------------------

    match /submissions/{submissionId} {
      // Un estudiante puede crear su propia sumisión.
      allow create: if isSignedIn() && request.resource.data.studentId == request.auth.uid;
      
      // Un estudiante puede leer sus propias sumisiones.
      // Profesores y admins pueden leer todas las sumisiones.
      allow get: if (isSignedIn() && resource.data.studentId == request.auth.uid) || isTeacherOrAdmin();

      // Profesores y Admins pueden listar todas las sumisiones.
      // Los estudiantes pueden listar sus propias sumisiones.
      allow list: if isTeacherOrAdmin() || (
        isSignedIn() && 
        request.query.where[0][0] == 'studentId' && 
        request.query.where[0][2] == request.auth.uid
      );
        
      // Nadie puede actualizar o eliminar sumisiones por ahora para mantener la integridad.
      allow update, delete: if false;
    }


    // --------------------------------------------------------------------------
    // Grupos e Assignments
    // --------------------------------------------------------------------------
    
    match /groups/{groupId} {
      allow read, list: if true; // ✅ Acceso público para lectura (necesario para registro)
      allow write: if isTeacherOrAdmin();
    }

    match /assignments/{assignmentId} {
        // Permite leer y listar si el usuario está autenticado
        // El filtrado específico por rol se hace en el cliente
        allow read, list: if isSignedIn();
        allow create, update, delete: if isTeacherOrAdmin();
    }

    match /challenges/{challengeId} {
      allow read, list: if isSignedIn();
      allow write: if isTeacherOrAdmin();
    }

    match /courses/{courseId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.instructorId == request.auth.uid;
      allow update, delete: if isSignedIn() && (resource.data.instructorId == request.auth.uid || isAdmin());

      match /assignments/{id} { allow read, write: if isSignedIn(); }
    }
  }
}
