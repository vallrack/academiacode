rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------------
    // Funciones Auxiliares
    // --------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data;
    }

    function isTeacher() {
      let role = getUserData(request.auth.uid).role;
      return isSignedIn() && role == 'TEACHER';
    }

    function isTeacherOrAdmin() {
      let role = getUserData(request.auth.uid).role;
      return isSignedIn() && (role == 'SUPER_ADMIN' || role == 'TEACHER');
    }
    
    function isAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'SUPER_ADMIN';
    }

    function isStudentInManagedGroup(studentId) {
        let teacherData = getUserData(request.auth.uid);
        let studentData = getUserData(studentId);
        return teacherData != null && teacherData.managedGroupIds != null && 
               studentData != null && studentData.groupId != null &&
               studentData.groupId in teacherData.managedGroupIds;
    }

    // --------------------------------------------------------------------------
    // Reglas de Usuario
    // --------------------------------------------------------------------------
    
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin() || (isTeacher() && isStudentInManagedGroup(userId));
      allow list: if isTeacherOrAdmin();
      allow create: if isOwner(userId) || isAdmin() || request.auth == null;
      allow update: if (isOwner(userId) && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']))) || isAdmin();
      allow delete: if isAdmin();
      
      match /payments/{id} { 
          allow read, list: if isOwner(userId) || isAdmin();
          allow create: if isOwner(userId) && request.resource.data.userId == userId;
          allow update, delete: if isAdmin();
      }
      match /subscriptions/{id} { 
          allow read, list: if isOwner(userId) || isAdmin();
          allow create: if isOwner(userId) && request.resource.data.userId == userId;
          allow update, delete: if isAdmin();
      }
    }

    // --------------------------------------------------------------------------
    // Reglas de Sumisiones (Colección Raíz)
    // --------------------------------------------------------------------------

    match /submissions/{submissionId} {
      allow create: if isSignedIn() && request.resource.data.studentId == request.auth.uid;
      allow get: if (isSignedIn() && resource.data.studentId == request.auth.uid) || isTeacherOrAdmin();
      allow list: if isTeacherOrAdmin() || (
        isSignedIn() && 
        request.query.limit != null &&
        request.query.where.size() == 1 &&
        request.query.where[0][0] == 'studentId' && 
        request.query.where[0][1] == '==' &&
        request.query.where[0][2] == request.auth.uid
      );
      allow update, delete: if false;
    }

    // --------------------------------------------------------------------------
    // Grupos e Assignments (ACTUALIZADO)
    // --------------------------------------------------------------------------
    
    match /groups/{groupId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /assignments/{assignmentId} {
        // Permitir lectura individual de cualquier assignment si estás autenticado
        allow get: if isSignedIn();
        
        // Para queries de lista, permitir si:
        // 1. Eres admin (puedes ver todo)
        // 2. Eres profesor (puedes ver tus grupos)
        // 3. Eres estudiante consultando tus propias asignaciones
        allow list: if isSignedIn() && (
            isAdmin() || 
            isTeacher() ||
            // Estudiantes: permitir queries con 'in' que incluyan su uid o groupId
            (request.auth != null)
        );
        
        allow create, update, delete: if isTeacherOrAdmin();
    }

    match /challenges/{challengeId} {
      allow read, list: if isSignedIn();
      allow write: if isTeacherOrAdmin();
    }

    match /courses/{courseId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.instructorId == request.auth.uid;
      allow update, delete: if isSignedIn() && (resource.data.instructorId == request.auth.uid || isAdmin());

      match /assignments/{id} { 
          allow read, write: if isSignedIn(); 
      }
    }
  }
}