
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------------
    // Funciones Auxiliares
    // --------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data;
    }

    function isTeacherOrAdmin() {
      let role = getUserData(request.auth.uid).role;
      return isSignedIn() && (role == 'SUPER_ADMIN' || role == 'TEACHER');
    }
    
    function isAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'SUPER_ADMIN';
    }

    function isSameGroup(targetUserId) {
      let currentUserData = getUserData(request.auth.uid);
      let targetUserData = get(/databases/$(database)/documents/users/$(targetUserId)).data;
      
      if (currentUserData.role == 'SUPER_ADMIN' || currentUserData.role == 'TEACHER') {
        return true;
      }
      
      return currentUserData.groupId == targetUserData.groupId && currentUserData.groupId != null;
    }

    // Verifica si el estudiante puede ver esta asignación según targetType y targetId
    function canViewAssignment(assignmentData) {
      let userData = getUserData(request.auth.uid);
      
      // Profesores y admin ven todo
      if (userData.role == 'SUPER_ADMIN' || userData.role == 'TEACHER') {
        return true;
      }
      
      // Si es estudiante, verificar según targetType
      if (assignmentData.targetType == 'group') {
        // La asignación es para un grupo, verificar si el estudiante pertenece a ese grupo
        return userData.groupId == assignmentData.targetId;
      } else if (assignmentData.targetType == 'student') {
        // La asignación es para un estudiante específico
        return request.auth.uid == assignmentData.targetId;
      }
      
      return false;
    }

    // --------------------------------------------------------------------------
    // Reglas de Usuario
    // --------------------------------------------------------------------------
    
    match /users/{userId} {
      allow get: if isOwner(userId) || isTeacherOrAdmin() || isSameGroup(userId);
      allow list: if isTeacherOrAdmin();
      allow create: if request.auth == null || isAdmin() || isOwner(userId);
      allow update: if (isOwner(userId) && (
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']) ||
        resource.data.role == request.resource.data.role
      )) || isAdmin();
      allow delete: if isAdmin();

      match /submissions/{submissionId} {
        allow read, list: if isOwner(userId) || isTeacherOrAdmin();
        allow create: if isOwner(userId) && request.resource.data.studentId == userId;
        allow update, delete: if isOwner(userId) || isAdmin();
      }

      match /payments/{paymentId} {
        allow read, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isAdmin();
      }

      match /subscriptions/{subscriptionId} {
        allow read, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isAdmin();
      }
    }

    // --------------------------------------------------------------------------
    // Grupos
    // --------------------------------------------------------------------------
    
    match /groups/{groupId} {
      allow read, list: if isSignedIn();
      allow write: if isTeacherOrAdmin();
    }

    // --------------------------------------------------------------------------
    // Asignaciones - REGLAS ACTUALIZADAS PARA TU ESTRUCTURA
    // --------------------------------------------------------------------------
    
    match /assignments/{assignmentId} {
      // GET: Puede leer si tiene permiso según canViewAssignment
      allow get: if isSignedIn() && canViewAssignment(resource.data);
      
      // LIST: Simplificado para evitar problemas con queries complejas
      allow list: if isSignedIn() && (
        isTeacherOrAdmin() ||
        // Estudiantes pueden hacer queries filtrando por targetId
        getUserData().role == 'STUDENT'
      );
      
      // Solo profes/admins crean y modifican asignaciones
      allow create: if isTeacherOrAdmin() && 
                      request.resource.data.assignedBy == request.auth.uid &&
                      request.resource.data.keys().hasAll(['assignedAt', 'assignedBy', 'challengeId', 'targetId', 'targetType']);
      allow update, delete: if isTeacherOrAdmin();
    }

    // --------------------------------------------------------------------------
    // Desafíos
    // --------------------------------------------------------------------------
    
    match /challenges/{challengeId} {
      allow read, list: if isSignedIn();
      allow write: if isTeacherOrAdmin();
    }

    // --------------------------------------------------------------------------
    // Cursos
    // --------------------------------------------------------------------------
    
    match /courses/{courseId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.instructorId == request.auth.uid;
      allow update: if isSignedIn() && (resource.data.instructorId == request.auth.uid || isAdmin());
      allow delete: if isSignedIn() && (resource.data.instructorId == request.auth.uid || isAdmin());

      match /assignments/{assignmentId} {
        allow read, list: if isSignedIn();
        allow create, update, delete: if isSignedIn() && 
          get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid;

        match /testcases/{testcaseId} {
          allow read, list: if isSignedIn();
          allow create, update, delete: if isSignedIn() && 
            get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid;
        }
      }
    }
  }
}
