rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }
    
    function isTeacherOrAdmin(uid) {
      let role = getUserRole(uid);
      return role == 'TEACHER' || role == 'ADMIN' || role == 'SUPER_ADMIN';
    }
    
    function userExists(uid) {
      return exists(/databases/$(database)/documents/users/$(uid));
    }

    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isTeacherOrAdmin(request.auth.uid));
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (
        request.auth.uid == userId || 
        (userExists(request.auth.uid) && getUserRole(request.auth.uid) == 'ADMIN') ||
        (userExists(request.auth.uid) && getUserRole(request.auth.uid) == 'SUPER_ADMIN')
      );
      allow delete: if request.auth != null && userExists(request.auth.uid) && getUserRole(request.auth.uid) == 'SUPER_ADMIN';
    }
    
    match /challenges/{challengeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isTeacherOrAdmin(request.auth.uid);
    }
    
    match /users/{userId}/challengeAttempts/{attemptId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isTeacherOrAdmin(request.auth.uid));
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
